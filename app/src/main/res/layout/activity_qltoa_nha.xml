<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_custom_1"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".views.QLToaNhaActivity">
    <TextView
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:text="QUẢN LÝ TOÀ NHÀ"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtCodeBuilding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã Toà Nhà" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên Toà Nhà" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <Button
            android:onClick="onButtonAddBuilding"
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="Thêm"
            android:textColor="#ffffff" />

        <Button
            android:visibility="invisible"
            android:layout_weight="1"
            android:onClick="onButtonUpdate"
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_button"
            android:text="Cập nhật"
            android:textColor="#ffffff" />

        <Button
            android:onClick="onButtonCancle"
            android:id="@+id/btnCancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="Huỷ"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvBuilding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>